@model OnlineTicariOtomasyon.Models.Siniflar.Cariler
@{
    ViewBag.Title = "CariGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Cari Güncelleme Ekranı</h2>
<br />
@using (Html.BeginForm("CariGuncelle", "Cari", FormMethod.Post))
{
    <div class="form-group">
        @Html.HiddenFor(x => x.CarilerID)
        @Html.LabelFor(x => x.CarilerAdi)
        @Html.TextBoxFor(x => x.CarilerAdi, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CarilerAdi, "", new { @style = "color:red" })
        <br />
        @Html.LabelFor(x => x.CarilerSoyadi)
        @Html.TextBoxFor(x => x.CarilerSoyadi, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CarilerSoyadi, "", new { @style = "color:red" })
        <br />
        @Html.LabelFor(x => x.CarilerSehir)
        @Html.TextBoxFor(x => x.CarilerSehir, new { @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.CarilerMail)
        @Html.TextBoxFor(x => x.CarilerMail, new { @class = "form-control" })
        <br />
        <button class="btn btn-default" style="background-color:yellowgreen">Güncelle</button>
    </div>
}

