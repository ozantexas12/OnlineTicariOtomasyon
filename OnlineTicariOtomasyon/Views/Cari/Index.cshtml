@using OnlineTicariOtomasyon.Models.Siniflar
@model List<Cariler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<table class="table table-bordered">
    <tr>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Şehir</th>
        <th>Mail</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.CarilerAdı</td>
            <td>@x.CarilerSoyadı</td>
            <td>@x.CarilerSehir</td>
            <td>@x.CarilerMail</td>
            <td><a href="~/Cari/CariSil/@x.CarilerID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Cari/CariGetir/@x.CarilerID" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Cari/MusteriSatis/@x.CarilerID" class="btn btn-default" style="background-color:lightcoral">Satın Alma</a></td>
        </tr>
    }

</table>
<a href="/Cari/YeniCari/" class="btn btn-info">Yeni Cari Ekle</a>

