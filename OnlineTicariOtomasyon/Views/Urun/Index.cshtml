@using OnlineTicariOtomasyon.Models.Siniflar;
@model List<Urun>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
@using (Html.BeginForm("Index", "Urun", FormMethod.Get))
            {
                 <p>
                     Ürün Adı:@Html.TextBox("p")
                     <input type="submit" value="Ara"/>
                 </p>
            }
<br />
<table class="table table-bordered">
    <tr>
        <th>ÜRÜN</th>
        <th>MARKA</th>
        <th>STOK</th>
        <th>ALIŞ FİYATI</th>
        <th>SATIŞ FİYATI</th>
        <th>KATEGORİ</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>Satış Yap</th>
    </tr>
    @foreach (var u in Model)
    {
        <tr>
            <td>@u.UrunAdi</td>
            <td>@u.UrunMarka</td>
            <td>@u.UrunStok</td>
            <td>@u.AlisFiyat ₺</td>
            <td>@u.SatisFiyat ₺</td>
            <td>@u.Kategori.KategoriAd</td>
            <td><a href="/Urun/UrunSil/@u.UrunId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Urun/UrunGetir/@u.UrunId" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Urun/SatisYap/@u.UrunId" class="btn btn-default" style="background-color:#0094ff">Satış Yap</a></td>
        </tr>
        }
</table>
<a href="/Urun/YeniUrun/" class="btn btn-info">Yeni Ürün</a>

