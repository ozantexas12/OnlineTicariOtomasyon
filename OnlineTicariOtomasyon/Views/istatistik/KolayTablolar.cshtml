@model IEnumerable<OnlineTicariOtomasyon.Models.Siniflar.SinifGroup>
@{
    ViewBag.Title = "KolayTablolar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title></title>

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <link rel="stylesheet" href="/Dist/plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="/Dist/dist/css/adminlte.min.css">
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Hızlı Bakış Tabloları</h1>
                    </div>
                </div>
            </div>
        </section>
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-6">
                        @Html.Action("Partial3", "istatistik")
                        @Html.Action("Partial1", "istatistik")
                    </div>
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Müşteri Şehir Tablosu</h3>
                            </div>
                            <div class="card-body p-0">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">#</th>
                                            <th>Şehir</th>
                                            <th>Progress Bar</th>
                                            <th style="width: 40px">Adet</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{ int SiraNo = 0; }
                                        @foreach (var x in Model)
                                        {
                                            <tr>
                                                <td>@{ SiraNo++; } @SiraNo</td>
                                                <td>@x.Sehir</td>
                                                <td>
                                                    @if (x.Sayi == 1)
                                                    {
                                                        <div class="progress progress-xs">
                                                            <div class="progress-bar progress-bar-danger" style="width: 55%"></div>
                                                        </div>
                                                    }
                                                    @if (x.Sayi == 2)
                                                    {
                                                        <div class="progress progress-xs">
                                                            <div class="progress-bar bg-warning" style="width: 70%"></div>
                                                        </div>
                                                    }
                                                    @if (x.Sayi == 3)
                                                    {
                                                        <div class="progress progress-xs progress-striped active">
                                                            <div class="progress-bar bg-success" style="width: 90%"></div>
                                                        </div>
                                                    }
                                                </td>
                                                <td>
                                                    @if (x.Sayi == 1)
                                                    {
                                                        <span class="badge bg-danger">@x.Sayi</span>
                                                    }
                                                    @if (x.Sayi == 2)
                                                    {
                                                        <span class="badge bg-warning">@x.Sayi</span>
                                                    }
                                                    @if (x.Sayi == 3)
                                                    {
                                                        <span class="badge bg-success">@x.Sayi</span>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        @Html.Action("Partial4", "istatistik")
                    </div>
                </div>
            </div>
        </section>
    </div>
    <aside class="control-sidebar control-sidebar-dark">
    </aside>
    <script src="/Dist/plugins/jquery/jquery.min.js"></script>
    <script src="/Dist/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/Dist/dist/js/adminlte.min.js"></script>
</body>
</html>
