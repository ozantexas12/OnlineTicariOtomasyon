@using OnlineTicariOtomasyon.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<table class="table table-bordered" style="margin-top:20px">
    <tr>
        <th>ID</th>
        <th>Ürün</th>
        <th>Cari</th>
        <th>Personel</th>
        <th>Adet</th>
        <th>Fiyat</th>
        <th>Toplam</th>
        <th>Tarih</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var s in Model)
    {
        <tr>
            <td>
                @s.SatisID
            </td>
            <td>
                @s.Urun.UrunAdı
            </td>
            <td>
                @s.Cariler.CarilerAdı @s.Cariler.CarilerSoyadı
            </td>
            <td>
                @s.Personel.PersonelAdı @s.Personel.PersonelSoyadı
            </td>
            <td>
                @s.Adet
            </td>
            <td>
                @s.Fiyat
            </td>
            <td>
                @s.ToplamTutar
            </td>
            <td>
                @s.Tarih
            </td>
            <td>
                <a href="~/Personel/PersonelGetir/@s.SatisID" class="btn btn-warning">Güncelle</a>
            </td>
            <td>
                <a href="~/Departman/DepartmanPersonelSatis/@s.SatisID" class="btn btn-group" style="background-color:lightcoral;color:white;">Detaylar</a>
            </td>
        </tr>
    }
</table>
<a href="~/Satis/YeniSatis/" class="btn btn-info">Yeni Satış Yap</a>

