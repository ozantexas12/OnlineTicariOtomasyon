@using OnlineTicariOtomasyon.Models.Siniflar
@model List<Fatura>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px">
    <tr>
        <th>Seri Sıra No</th>
        <th>Vergi Dairesi</th>
        <th>Tarih</th>
        <th>Saat</th>
        <th>Toplam</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
        <th>PopUp Liste</th>
        <th>Yeni Kalem</th>
    </tr>
    @foreach (var f in Model)
    {
        <tr>
            <td>
                @f.FaturaSeriNo @f.FaturaSiraNo
            </td>
            <td>
                @f.VergiDairesi
            </td>
            <td>
                @f.FaturaTarihi
            </td>
            <td>
                @f.Saat
            </td>
            <td>
                @f.Toplam ₺
            </td>
            <td>
                <a href="~/Fatura/FaturaGetir/@f.FaturaID" class="btn btn-warning">Güncelle</a>
            </td>
            <td>
                <a href="~/Fatura/FaturaDetay/@f.FaturaID" class="btn btn-group" style="background-color:lightcoral;color:white;">Detaylar</a>
            </td>
            <td>
                <a href="~/Fatura/FaturaDetay/@f.FaturaID" class="btn btn-group" style="background-color:dodgerblue;color:white;">PopUp</a>
            </td>
            <td>
                <a href="~/Fatura/FaturaDetay/@f.FaturaID" class="btn btn-group" style="background-color:thistle;color:white;">Kalem</a>
            </td>
        </tr>
    }
</table>
<a href="/Fatura/FaturaEkle" class="btn btn-info">Yeni Fatura Girişi</a>
<br />
<br />
<button type="button" class="btn btn-warning" style="background-color:#d95151; color:white" data-toggle="modal" data-target="#Modal1">Popup Penceresi</button>

<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Popup D ialog Ekranı</h2>
            </div>
            <div class="modal-body">
                <table class="table table-bordered" ">
                    <tr>
                        <td>Seri No</td>
                        <td>Sıra No</td>
                        <td>Tutar</td>
                    </tr>
                    @foreach (var x in Model)
                    {
                        <tr>
                            <td>@x.FaturaSeriNo</td>
                            <td>@x.FaturaSıraNo</td>
                            <td>@x.Toplam</td>
                        </tr>
                    }
                </table>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Vazgeç</button>
            </div>
        </div>
    </div>
</div>